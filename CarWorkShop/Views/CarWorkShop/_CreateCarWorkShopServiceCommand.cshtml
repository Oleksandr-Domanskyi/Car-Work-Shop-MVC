
@model CarWorkShop.Application.CarWorkShopService.Commands.CreateCarWorkShopServiceCommand
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#CreateCarWorkShopServiceModel">
    Add carworkshop service
</button>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="_CreateCarWorkShopService">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Create new carworkshop service</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="CarWorkShopEncodedName" class="form-control" type="hidden" />
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Coast" class="control-label"></label>
                    <input asp-for="Coast" class="form-control" />
                    <span asp-validation-for="Coast" class="text-danger"></span>
                </div>
            </div>
            </form>
        </div>
    </div>
</div>


@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}